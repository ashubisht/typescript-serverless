{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6", "es2016", "es2017", "dom", "esnext.asynciterable"],
    "types": ["node"],
    "sourceMap": true,
    "allowJs": false,
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types", "./typedefs"],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    //"noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules"
  ]
}
